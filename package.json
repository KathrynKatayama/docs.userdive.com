{
  "name": "docs.userdive.com",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "devDependencies": {
    "doctoc": "^1.2.0",
    "gitbook-cli": "^2.3.0",
    "gulp": "^3.9.1",
    "gulp-connect": "^4.1.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-htmlmin": "^2.0.0",
    "gulp-if": "^2.0.1",
    "gulp-uglify": "^1.5.4",
    "markdownlint-cli": "^0.1.0",
    "mermaid": "^6.0.0",
    "require-dir": "^0.3.0",
    "textlint": "^7.0.1",
    "textlint-rule-max-ten": "^2.0.1",
    "textlint-rule-no-dead-link": "^3.0.1",
    "textlint-rule-no-mix-dearu-desumasu": "^3.0.2",
    "textlint-rule-preset-jtf-style": "^2.2.0",
    "tslint": "^3.12.1",
    "typescript-require": "^0.2.9-1",
    "typings": "^1.3.1"
  },
  "scripts": {
    "build": "gitbook build && find _book -type l -delete && gulp build",
    "deploy": "npm run toc && npm run build",
    "lint:markdown": "markdownlint en ja",
    "lint:text": "textlint ja",
    "lint": "npm run lint:markdown && npm run lint:text",
    "postinstall": "gitbook install && typings install",
    "prebuild": "rm -rf _book && rm -rf dist",
    "start": "gitbook serve",
    "test": "npm run lint",
    "toc": "doctoc $(find . | grep md | grep -v 'node_modules\\|SUMMARY\\|GLOSSARY\\|LANGS\\|README\\|_TEMPLATE')"
  }
}

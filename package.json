    "@types/gulp-uglify": "0.0.29",
    "@types/node": "^7.0.0",
    "@uncovertruth/textlint-config-ja": "^0.0.12",
    "@uncovertruth/tslint-config": "^0.0.2",
    "doctoc": "^1.2.0",
    "ghpages": "0.0.8",
    "gitbook-cli": "^2.3.0",
    "gulp": "^3.9.1",
    "gulp-connect": "^5.0.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-htmlmin": "^3.0.0",
    "gulp-if": "^2.0.2",
    "gulp-uglify": "^2.0.0",
    "markdownlint-cli": "^0.2.0",
    "mermaid": "^6.0.0",
    "npm-run-all": "^4.0.0",
    "require-dir": "^0.3.1",
    "rimraf": "^2.5.4",
    "textlint": "^7.2.1",
    "ts-node": "^2.0.0",
    "tslint": "^4.2.0",
    "typescript": "^2.1.4",
    "typescript-require": "^0.2.9-1"
  },
  "homepage": "http://docs.userdive.com/",
  "keywords": [],
  "main": "",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/uncovertruth/docs.userdive.com.git"
  },
  "scripts": {
    "build": "npm run toc && gitbook build && find _book -type l -delete && gulp build",
    "lint": "npm-run-all -p lint:*",
    "lint:ja": "textlint --cache -c @uncovertruth/textlint-config-ja ja",
    "lint:md": "npm-run-all -p lint:md:*",
    "lint:md:en": "markdownlint en",
    "lint:md:ja": "markdownlint ja",
    "lint:ts": "tslint gulpfile.ts \"gulp/**/*.ts\"",
    "postinstall": "gitbook install",
    "prebuild": "rimraf _book dist",
    "start": "gitbook serve",
    "test": "npm run lint",
    "toc": "doctoc $(find . | grep md | grep -v 'node_modules\\|SUMMARY\\|GLOSSARY\\|LANGS\\|README\\|_TEMPLATE')"
  }
}
